@{
    ViewData["Title"] = "Contact Confirmation";
    Layout = "_Layout"; 
}

<div class="container mt-5">
    <h1 class="mb-4">Thank You!</h1>

    <p>Your information has been successfully submitted:</p>
    <ul>
        <li><strong>Full Name:</strong> @ViewBag.FullName</li>
        <li><strong>Email Address:</strong> @ViewBag.Email</li>
        <li><strong>Message:</strong> @ViewBag.Message</li>
    </ul>
</div>
