@model List<Product> // Set the model for this view

@{
    ViewData["Title"] = "Products";
    Layout = "_Layout"; 
}

<h1>Products in this Category</h1>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"> <!-- Display product image -->
                <div class="card-body">
                    <h2 class="card-title">@product.Name</h2>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text">Price: @product.Price</p>
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="btn btn-sm btn-outline-secondary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
